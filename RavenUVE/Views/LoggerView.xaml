<UserControl x:Class="RavenUVE.Views.LoggerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        Width="400"
        Height="100"
        DataContext="{Binding LoggerView, Source={StaticResource Locator}}">

    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="Auto"/>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Orientation="Horizontal">
			<ToggleButton Content="Error" Margin="5,5,0,5" Width="75" Style="{DynamicResource LoggerToggleButtonStyle}" Background="#FFE84545" BorderThickness="2"/>
			<ToggleButton Content="Warning" Margin="5,5,0,5" Width="75" Style="{DynamicResource LoggerToggleButtonStyle}"/>
			<ToggleButton Content="Information" Margin="5,5,0,5" Width="75" Style="{DynamicResource LoggerToggleButtonStyle}"/>
			<ToggleButton Content="Debug" Margin="5,5,0,5" Width="75" Style="{DynamicResource LoggerToggleButtonStyle}"/>
			<ToggleButton Content="Trace" Margin="5,5,0,5" Width="75" Style="{DynamicResource LoggerToggleButtonStyle}"/>

		</StackPanel>
        <ListView ItemsSource="{Binding LogCollection}" Grid.Row="1"/>
    </Grid>
</UserControl>
